<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ck.tqweather.app"
    android:versionCode="1"
    android:versionName="TQ1.0">

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ck.tqweather.app.activity.ChooseAreaActivity"
            android:exported="false"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.ChooseAreaActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ck.tqweather.app.activity.WeatherActivity"
            android:exported="false"></activity>
        <activity
            android:name="ck.tqweather.app.activity.SplanshActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.AutoUpdateService"
            android:exported="false"></service>
        <receiver
            android:name=".receiver.AutoUpdateRecevier"
            android:exported="false"></receiver>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
